<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name='Name' placeholder="Password"></input>
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" class="form-control" name='Email' placeholder="Enter Email"></input>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name='Password' placeholder="Password"></input>
                </div>
                <a href="/signup">Already have a account</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
        </div>
    </div>
</div>